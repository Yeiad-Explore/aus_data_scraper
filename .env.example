# Target Website Configuration
BASE_URL=  # Base URL for the target website (e.g., https://example.com)
ENTRY_URL=  # Starting URL for scraping (e.g., https://example.com/listing)

# Browser Configuration
HEADLESS=true
BROWSER_TYPE=chromium

# Delays (seconds) - Anti-blocking
MIN_DELAY_SECONDS=3.0
MAX_DELAY_SECONDS=6.0

# Timeouts (milliseconds)
PAGE_LOAD_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000

# LLM Configuration (Optional - for enrichment phase)
LLM_PROVIDER=azure  # "azure", "anthropic", or "openai"
LLM_API_KEY=  # Add your API key here
LLM_TEMPERATURE=0.0

# Azure OpenAI Configuration (required if LLM_PROVIDER=azure)
AZURE_OPENAI_ENDPOINT=  # e.g., https://your-resource.cognitiveservices.azure.com/openai/v1
AZURE_OPENAI_DEPLOYMENT=  # e.g., gpt-4o, gpt-4-turbo, or gpt-5.1-chat

# Alternative LLM Providers (only if not using Azure)
# For Anthropic: Set LLM_PROVIDER=anthropic and LLM_MODEL=claude-3-5-sonnet-20241022
# For OpenAI: Set LLM_PROVIDER=openai and LLM_MODEL=gpt-4o
LLM_MODEL=  # Only needed for Anthropic/OpenAI (not Azure)

# Retry Configuration
MAX_RETRIES=1
